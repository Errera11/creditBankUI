@inject AuthModel x
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="mb-50">
        <nav class="navbar bg-black text-white">
            @if (x?.Login?.Length > 0)
            {
                <div class="m-3">
                    <button>
                        <a class="nav-link" href="/">Home</a>
                    </button>
                    <button>
                        <a class="nav-link" href="/CreditCart/Index">
                            My Credit
                        </a>
                    </button>
                </div>
                <div class="m-3 d-flex flex-row">
                    <div class="bg-white text-dark rounded p-1 mx-2">
                         @x.Login
                    </div>
                    <div >
                        <button>
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                                Logout
                            </a>
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="m-3">
                    <button>
                        <a class="nav-link" href="/">Home</a>
                    </button>
                </div>
                <div class="m-3">
                    <button>
                        <a class="nav-link" asp-controller="Auth" asp-action="Login">
                            Log In
                        </a>
                    </button>
                </div>
            }
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>

