@model MyApp.Data.Models.Credit
<div class="m-5 border border-dark rounded p-3">
    <p>
        <div>Credit: @Model.amount.ToString("c")</div>
    </p>
    <div>
        <div>Credit percentage: @Model.percentage.ToString()%</div>
    </div>
    <div>
        <div>Credit time: @Model.creditTime</div>
    </div>
    <div class="align-items-end">
        <p><a class="btn btn-warning" asp-controller="CreditCart" asp-action="addToCart" asp-route-id="@Model.id">Apply Credit</a></p>
    </div>

</div>
